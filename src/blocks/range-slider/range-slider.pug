doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="nouislider.js")
    link(href="nouislider.css" rel="stylesheet")
    link(href="range-slider.css" rel="stylesheet")
  body
    #slider
    span#slider-range
    script. 
      var slider = document.getElementById('slider');
      var rangeSliderValueElement = document.getElementById('slider-range');
      noUiSlider.create(slider, {
        start: [2000, 8000],
        connect: true,
        step: 500,
        range: {
          'min': 0,
          'max': 20000
          }
      });
      slider.noUiSlider.on('update', function (values) {
        rangeSliderValueElement.innerHTML = values.join(' - ');
      });