mixin account-registration(aclass,atitle)
  div(class=aclass)
    label(class=aclass + '__title')=atitle 
    form(class=aclass + '__reg-form')
      +textlabel('textfield','','Имя')
      +textlabel('textfield','','Фамилия')
      +radio-buttons('radio-buttons','','Мужчины','Женщины')
      +textlabel('textfield textfield--masked','Дата Рождения','ДД.ММ.ГГГГ')
    form(class=aclass + '__login-form')
      +textlabel('textfield','Данные для входа в сервис','Email') 
      +textlabel('textfield','','Пароль')
      +expandable-chckbox-list('expandable-chckbox-list expandable-chckbox-list--checkbox-buttons expandable-chckbox-list--toogle'
      ,'',['Получать спецпредложения'])(open)
      +button('button button-with-arrow','Перейти к оплате')
    div(class=aclass + '__container')
      label(class=aclass + '__label') Уже есть аккаунт на Toxin
      +button('button button-without-fill','Войти')
