mixin bullet-list(options)
  - options = options || {};
  - options.className = options.className || 'bullet-list' ;
  - options.title = options.title || 'Bullet list';
  - options.listItems = options.listItems || ['Нельзя с питомцами','Без вечеринок и мероприятий','Время прибытия - после 13:00, а выезд до 12:00'];
  - var classNameDivided=options.className.split(' ');
  div(class=options.className)
    label(class=classNameDivided.map((item)=>`${item}__title`).join(' '))=options.title
    ul(class=classNameDivided.map((item)=>`${item}__ul`).join(' '))
      each val in options.listItems
        li(class=classNameDivided.map((item)=>`${item}__li`).join(' '))
          span(class=classNameDivided.map((item)=>`${item}__span`).join(' '))=val