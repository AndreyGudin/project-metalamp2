mixin findroom-card(options)
  - options = options || {};
  - options.className = options.className || 'findroom-card' ;
  - options.title = options.title || 'Найдём номера под ваши пожелания';
  div(class=options.className)
    form(class=`${options.className}__form`)
      label(class=`${options.className}__title`)=options.title
      div(class=`${options.className}__booking-time`)
        +textfield({className:'textfield textfield_date-dropdown date-arrival',title:'Прибытие',placeholder:'ДД.ММ.ГГГГ'})(readonly)
        +textfield({className:'textfield textfield_date-dropdown date-exit',title:'Выезд',placeholder:'ДД.ММ.ГГГГ'})(readonly)
      +guest-dropdown({className:`guest-dropdown ${options.className}-guest-dropdown`,title:'Гости',menuItems:['Взрослые','Дети','Младенцы'],hide:'0'})
      div(class=`${options.className}__button_with-arrow`)
        +button({className:`button button_with-arrow ${options.className}-button_with-arrow`,title:'Подобрать номер'})    
