mixin guest-dropdown(options)
  - var i=1
  - var classNameDivided=options.className.split(' ');
  div(class=classNameDivided.map((item)=>`${item}-block`).join(' '))
    label(class=classNameDivided.map((item)=>`${item}__title`).join(' '))=options.title
    div(class = `${classNameDivided[classNameDivided.length-1]} iqdropdown`)
      p.iqdropdown-selection
      div(class = `${classNameDivided[classNameDivided.length-1]} iqdropdown-menu`, data-hide = options.hide)
        each item in options.menuItems
          .iqdropdown-menu-option(data-id=`item${i}`)
            div
              p.iqdropdown-item=item
              - i++